<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/card_bg</item>
		<item name="colorPrimaryDark">@color/card_bg</item>
		<item name="colorAccent">@color/fab_bg</item>
		<item name="android:windowLightStatusBar">true</item>
		<item name="android:windowBackground">@color/screen_bg</item>
		<item name="android:colorBackground">@color/screen_bg</item>
	</style>

	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
